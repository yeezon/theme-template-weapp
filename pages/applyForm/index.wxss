/* pages/orderApply/applyForm.wxss */
page {
  background-color: #f3f3f3;
}

.s-apply-wrap {
  margin-top: 24rpx;
  border: 2rpx solid #ddd;
}
.s-title {
  font-size: 36rpx;
  color: #333;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #ddd;
  background: #fff;
}
.s-pro-list {
  padding: 0 50rpx 0 30rpx;
  margin: 0;
  border-bottom: 2rpx solid #ddd;
  background: #fff;
}
.s-pro-item {
  display: flex;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #ddd;
}
.s-pro-item:last-child {
  border-bottom: none;
}
.s-pro-img {
  width: 120rpx;
  height: 120rpx;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}
.s-pro-info {
  flex: 1;
  margin-left: 20rpx;
}
.s-pro-name {
  font-size: 24rpx;
  color: #333;
  line-height: 36rpx;
  margin: 0;
}
.s-pro-sku {
  font-size: 24rpx;
  color: #999;
  line-height: 36rpx;
  margin: 10rpx 0 0 0;
}

.s-form {
  margin-top: 24rpx;
  border-top: 2rpx solid #ddd;
  background: #fff;
  padding: 40rpx 30rpx 60rpx;
}

.form-item {
  margin-bottom: 44rpx;
}

.form-item.is-required .item-left::before{
  content: "*";
  color: #f56c6c;
  margin-right: 8rpx;
}

.item-left {
  width: 200rpx;
  text-align: right;
  vertical-align: middle;
  float: left;
  font-size: 28rpx;
  color: #606266;
  line-height: 80rpx;
  padding: 0 24rpx 0 0;
  box-sizing: border-box;
}

.item-right {
  line-height: 80rpx;
  position: relative;
  font-size: 28rpx;
  margin-left: 200rpx;
}

.radio-group .radio{
  display: block;
}

.picker {
  height: 60rpx;
  line-height: 60rpx;
  border: 2rpx solid #bbb;
  border-radius: 8rpx;
  padding: 0 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.input {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  border: 2rpx solid #bbb;
  border-radius: 8rpx;
}

.input-tips {
  font-size: 24rpx;
  color: #999;
  line-height: 2;
}

.s-textarea {
  width: 100%;
  box-sizing: border-box;
  border: 2rpx solid #bbb;
  border-radius: 8rpx;
  padding:10rpx 20rpx;
}

.btn-wrap {
  text-align: center;
}

.s-comfirm-btn {
  color: #fff;
  background-color: #f44;
  border-color: #f44;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border-radius: 6rpx;
}
