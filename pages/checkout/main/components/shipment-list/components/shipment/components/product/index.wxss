
.checkout_shipment_pro-item {
  display: flex;
  padding: 13px 15px;
}
.checkout_shipment_pro .img {
  position: relative;
  width: 70px;
  height: 70px;
}
.checkout_shipment_pro .img .img {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  max-width: 100%;
  max-height: 100%;
}
.checkout_shipment_pro .info {
  margin: auto;
  padding: 0 10px;
  flex: 1;
  line-height: 1;
  font-size: 12px;
}
.checkout_shipment_pro .name {
  display: -webkit-box;
  margin: 0 0 4px;
  max-height: 32px;
  line-height: 16px;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
.checkout_shipment_pro .sku {
  display: -webkit-box;
  max-height: 32px;
  line-height: 16px;
  color: #999;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
.checkout_shipment_pro .count {
  text-align: right;
  font-weight: bold;
  line-height: 1;
}
.checkout_shipment_pro .price {
  display: inline-block;
  line-height: 18px;
}
.checkout_shipment_pro .times {
  color: #777;
}
