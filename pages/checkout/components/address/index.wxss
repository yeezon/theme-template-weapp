
.checkout-address {
  display: flex;
  margin: 0 0 15px;
  padding: 0 15px;
  border: 0 solid #d5d5d5;
  border-width: 1rpx 0;
  background-color: #fff;
  -webkit-tap-highlight-color: transparent;
  transition: background-color .3s ease-out;
}
.checkout-address:active {
  transition: none;
  background-color: #e6e6e6;
}
.checkout-address-info {
  flex: 1;
  margin: auto;
  padding: 15px 0;
  overflow: hidden;
}
.checkout-address_icon {
  margin: auto;
  padding: 0 12px 0 0;
  width: 24px;
  height: 24px;
  color: #999;
}
.checkout-address-top {
  display: flex;
  margin: 0 0 8px;
  font-weight: bold;
  line-height: 20px;
}
.checkout-address-name,
.checkout-address-phone {
  margin: auto 10px auto 0;
  font-size: 16px;
}
.checkout-address-address {
  margin: 0 0 5px;
  line-height: 1;
  font-size: 13px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.checkout-address-address_detail {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.checkout-address-arrow {
  margin: auto auto auto 15px;
  color: #999;
  width: 16px;
  height: 16px;
}
