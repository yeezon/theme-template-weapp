
.checkout_bar {
  width: stretch;
  background-color: #fff;
}
.checkout_bar-add {
  padding: 7px 15px;
  background-color: #fffbea;
  border: 0 solid #d5d5d5;
  border-width: 1rpx 0 0;
  font-size: 12px;
  line-height: 18px;
}
.checkout_bar-cont {
  display: flex;
  padding: 7px 15px;
  background-color: #fff;
  text-align: right;
  border: 0 solid #d5d5d5;
  border-width: 1rpx 0 0;
}
.checkout_bar-left {
  flex: 1;
  margin: auto;
  padding: 0 15px 0 0;
  line-height: 20px;
}
.checkout_bar-sum > .price {
  color: #f44;
  font-weight: bold;
}
.checkout_bar-point {
  font-size: 12px;
  color: #989898;
}
.checkout_bar-submit {
  display: block;
  margin: 0;
  padding: 12px 29px 13px;
  width: 123px;
  height: 42px;
  border-radius: 3px;
  font-size: 16px;
  line-height: 16px;
  color: #fff;
  background-color: #f44;
  border-color: #f44;
}

.home_indicator {
  height: var(--homeIndicator);
  line-height: var(--homeIndicator);
  font-size: 14px;
  text-align: center;
}
