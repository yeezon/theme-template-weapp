/* pages/orderDetails/orderDetails.wxss */

page {
  background: #fff;
}

.order-status {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  background: #fdac39;
  padding: 20rpx;
  box-sizing: border-box;
}

.order-tips {
  font-size: 24rpx;
  display: block;
  color: #999;
}

.order-status.close {
  background: #a6a6a6;
}

.order-list {
  padding-bottom: 148rpx;
}

.order-list.isIpx {
  padding-bottom: 216rpx;
}

/* 公用样式 */
.order-row {
  padding: 30rpx;
  border-bottom: 18rpx solid #f4f4f4;
  background: #fff;
}

.order-row:last-child {
  border-bottom: none;
}

.order-row-main {
  display: flex;
  align-items: center;
}

.order-row-list {
}

.order-row-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18rpx;
  font-size: 26rpx;
  line-height: 26rpx;
}

.order-row-item:last-child {
  margin-bottom: 0;
}

.order-row-label {
  color: #262626;
  font-weight: bold;
}

.order-row-text {
  color: #666;
  margin-left: 0;
  display: flex;
  align-items: center;
  align-self: stretch;
}

.order-row-text .order-no {
}

.price_color_black {
  color: #262626 !important;
}

/* 地址栏 */
.order-address {
}

.order-address-cont {
  flex: 1;
  font-size: 28rpx;
  overflow: hidden;
}

.order-address .order-address-info {
  font-weight: bold;
}

.order-address .order-address-info .name {
}

.order-address .order-address-details {
  font-size: 24rpx;
  color: #444;
  margin-top: 6rpx;
  font-weight: normal;
}

/* 商品列表 */
.order-row.order-pro-con {
  padding: 0;
}

.order-row_img {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

/* 订单信息 */
.order-info {
}

/* .order-info .order-row-item {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
} */
.order-info .order-row-text {
  display: flex;
  flex: 1;
}

.copy-tap {
  display: inline-block;
  width: 78rpx;
  height: 36rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #666;
  border: 2rpx solid #666;
  border-radius: 30rpx;
  box-sizing: border-box;
  text-align: center;
  vertical-align: middle;
  margin-left: 28rpx;
}

/* 金额 */
.order-price {
}

.order-price .order-row-label {
  /* font-size: 26rpx; */
}

.order-price .price_color_black,
.order-row-item-pay {
  font-weight: bold;
}

.order-row-item-pay {
  border-top: 2rpx solid #f4f4f4;
  padding-top: 18rpx;
}

.order-price .order-row-item-pay .order-row-label {
  font-size: 28rpx;
}

/**/
.order-row_allow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.order-row-con.logistics .order-row-label {
  color: #ff812d;
  font-weight: bold;
}

/* 商品列表 */
.order-shipment {
}

.order-package {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f4f4f4;
}

.package-tag {
  display: inline-block;
  padding: 0 10rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  color: #fdac39;
  border: 2rpx solid #fdac39;
  border-radius: 4rpx;
}

.package-status {
  font-size: 28rpx;
  color: #262626;
  font-weight: bold;
}

.order-shipment-products {
}

.order-shipment-product-item {
  display: flex;
  align-items: center;
  padding: 18rpx 0 18rpx 0;
  overflow: hidden;
  border-bottom: 2rpx dashed #f4f4f4;
}

.order-shipment-product-item:last-child {
  border-bottom: none;
}

.order-shipment-product-item image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 6rpx;
}

.order-shipment-product-item .info {
  flex: 1;
  margin-left: 18rpx;
  overflow: hidden;
}

.order-shipment-product-item .total {
  margin-left: 18rpx;
  text-align: right;
}

.order-shipment-product-item .name {
  font-size: 28rpx;
  line-height: 36rpx;
  color: #333;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.order-shipment-product-item .sku {
  font-size: 24rpx;
  color: #666;
  line-height: 32rpx;
  margin-top: 10rpx;
}

.order-shipment-product-item .price {
  font-size: 28rpx;
  line-height: 36rpx;
  font-weight: bold;
  color: #262626 !important;
}

.order-shipment-product-item .quantity {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.order-shipment-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0 0 0;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  border-top: 2rpx solid #f4f4f4;
  font-weight: bold;
}

/* 查看物流 */
.order-shipment-btn {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 30rpx 0 0 0;
  background: #fff;
  font-size: 28rpx;
  color: #333;
  /* border-top: 2rpx solid #f4f4f4; */
}

.order-shipment-btn .btn {
  font-size: 24rpx;
  padding: 0 24rpx;
  height: 60rpx;
  line-height: 56rpx;
  color: #fb544e;
  border: 2rpx solid #fb544e;
  border-radius: 30rpx;
  box-sizing: border-box;
  margin-left: 18rpx;
}

.order-shipment-btn .btn.fill-btn {
  background: #fb544e;
  color: #fff;
}

.order-shipment-btn image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

/*  */

.order-details-bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
}

.order-details-btns {
  display: flex;
  padding: 30rpx;
}

.order-details-btn::after {
  border: none;
  border-radius: 0;
}

button.order-details-btn {
  flex: 1;
  height: 88rpx;
  line-height: 84rpx;
  align-items: center;
  justify-content: center;
  border-radius: 44rpx;
  font-size: 28rpx;
  margin-right: 22rpx;
  font-weight: bold;
  color: #fb544e;
  border: 2rpx solid #fb544e;
  box-sizing: border-box;
}

.order-details-btn.fill-btn {
  color: #fff;
  background-color: #fb544e;
  border: 2rpx solid #fb544e;
}

.order-details-btn:last-child {
  margin-right: 0;
}

.btn-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.order-details-btn .line {
  font-size: 24rpx;
  color: #fff;
  margin: 0 10rpx;
}

.order-details-btn .time {
  display: inline-flex;
}

.order-remarks {
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #888;
}
