/* pages/coupon/coupon.wxss */
page {
  font-size: 28rpx;
  background: #f6f4f9;
}

.nav-wrap {
  margin: 0 0 15px;
  border-top: 1px solid #d5d5d5;
  border-bottom: 1px solid #d5d5d5;
  background-color: #fff;
  display: flex;
}

.nav-item {
  height: 76rpx;
  line-height: 76rpx;
  flex: 1;
  text-align: center;
}

.nav-item text{
  display: inline-block;
  width: max-content;
}

.nav-item.active text {
  color: #4685ee;
  position: relative;
}

.nav-item.active text::after {
  position: absolute;
  display: block;
  content: " ";
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  font-size: 0;
  line-height: 0;
  background-color:  #4685ee;
}

.list-wrap {

}

.list-item {
  background: #fff;
  margin: 0 0 30rpx;
  border-bottom: 1px solid #d5d5d5;
  border-top: 1px solid #d5d5d5;
}

.item-bar {
  padding: 26rpx 30rpx;
  overflow: hidden;
  border-bottom: 1px solid #d5d5d5;
  line-height: 1;
}

.item-bar-desc {
  float: right;
}

.item-ticket {
  display: flex;
  margin: 26rpx 0 26rpx 30rpx;
}

.item-ticket .item-icon {
  display: flex;
  position: relative;
  margin: auto 0;
  background-color: #ff5a5a;
  width: 200rpx;
  height: 110rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 1;
  text-align: center;
}

.item-ticket .item-icon::after {
  content: ' ';
  position: absolute;
  top: -1px;
  left: -1px;
  width: 100%;
  height: 100%;
  border-color: #ff5a5a;
  border-width: 1px;
  border-left-style: dashed;
  border-right-style: dashed;
  border-top-style: solid;
  border-bottom-style: solid;
}

.item-icon-info {
  margin: auto;
  font-size: 26rpx;
}

.item-icon-desc {
  display: inline-block;
  margin: 10rpx 0 0;
  word-break: break-all;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin: auto 0 auto 20rpx;
  font-size: 26rpx;
  line-height: 1.3em;
  color: #777;
}

.item-info-title {
  margin: 0 0 10rpx;
  font-size: 28rpx;
  color: #333;
}

.price-color {
  color:#fff;
}