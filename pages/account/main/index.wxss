.account {
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  height: 100vh;
  background: #f6f4f9;
}

.main {
  flex: 1;
  overflow-y: auto;
}

.mine-header-bg {
  height: 515rpx;
  position: relative;
  font-size: 0;
}

.header-title {
  position: absolute;
  top: var(--statusBar);
  left: 0;
  font-size: 36rpx;
  color: #262626;
  line-height: var(--navBar);
  width: 100%;
  text-align: center;
}

.header-img {
  width: 100%;
  height: 515rpx;
}

.mine-header {
  position: absolute;
  top: calc(60px + var(--statusBar));
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  border-radius: 20rpx 20rpx 0 0;
}

.personal-info {
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  color: #000;
  font-weight: bold;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.personal-info .personal-avatar {
  /* display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  position: absolute;
  top: -174rpx;
  left: 50%;
  transform: translateX(-50%); */
  width: 144rpx;
  height: 144rpx;
  border-radius: 100%;
  overflow: hidden;
}

.personal-info .personal-image {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  overflow: hidden;
  background: transparent;
}

.personal-info .personal-name {
  max-width: 80%;
  display: block;
  margin: 18rpx 0 0;
  padding: 0 30rpx;
  line-height: 1em;
  height: 1em;
  font-size: 40rpx;
  font-weight: bold;
  word-break: keep-all;
}

.mine-list {
  z-index: 1;
}

.mine-row-list {
  margin: -45px 0 15px;
  padding: 40px 0 0;
  background: #fff;
}

/*  */

.mine-order-wrap {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 140rpx;
  padding: 0 30rpx;
  margin: -70rpx 30rpx 0;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(238, 238, 238, 1);
  border-radius: 20rpx;
  z-index: 9;
}

.mine-order-item {
  flex: 1;
  height: 100%;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin: 0 10rpx;
  color: #222;
}

.mine-order-item image {
  position: relative;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  overflow: visible;
}

.mine-order-item image badge {
  position: absolute;
  top: -14rpx;
  right: -14rpx;
}
