/* pages/logisticsInfo/logisticsInfo.wxss */

.new-logistics-Info-header {
  display: flex;
  align-items: center;
  padding: 48rpx 40rpx;
  color: #fff;
  background: #00bf7e;
}

.new-logistics-Info-header_left image {
  width: 50rpx;
  height: 50rpx;
}

.new-logistics-Info-header_center {
  flex: 1;
  font-size: 28rpx;
}

.new-logistics-Info-header_center .info {
  display: flex;
  margin: 4rpx 0 10rpx;
}

.new-logistics-Info-header_center .info .copy-btn {
  width: 56rpx;
  height: 30rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-left: 15rpx;
  color: #fff;
  border: 2rpx solid #fff;
  border-radius: 4rpx;
}

.new-logistics-Info-header_right .new-logistics-service-btn {
  width: 130rpx;
  height: 58rpx;
  font-size: 22rpx;
  padding: 0;
  margin-left: 20rpx;
  color: #00bf7e;
  background: #fff;
  border: none;
  border-radius: 4rpx;
}

.new-logistics-Info-header_right .new-logistics-service-btn::after {
  border-radius: 4rpx;
  border: none;
}

.new-logistics-Info-list {
  padding: 86rpx 56rpx;
}


.no-logistics-Info {
  text-align: center;
  color: #a6a6a6;
  font-size: 28rpx;
  padding-top: 250rpx;
}