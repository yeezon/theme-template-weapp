/* pages/cart/cart.wxss */

page {
  background: #f4f4f4;
}

.cart-wrap {
  padding-bottom: 90rpx;
}

.cart-bottom-bar {
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 90rpx;
  border-top: 1rpx solid #e1e1e1;
  background: #fff;
  z-index: 9;
}

.check-all-btn {
  display: inline-flex;
  align-items: center;
  height: 100%;
  padding-right: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.4s;
}

.check-all-btn image {
  width: 36rpx;
  height: 36rpx;
  margin: 0 16rpx 0 30rpx;
}

.total-wrap {
  flex: 1;
  display: inline-flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  height: 100%;
  padding-right: 30rpx;
}

.total-price {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.total-price .price {
  color: #e94a46;
}

.total-tips {
  font-size: 22rpx;
  color: #999;
}

.settlement-btn {
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  padding: 0 10rpx;
  font-size: 30rpx;
  color: #fff;
  background: #fb544e;
}

.settlement-btn-hover {
  opacity: 0.9;
}


cart-pro-list {
  position: relative;
  z-index: 999;
}


/*  */

.cart-pro-item {
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
}

.cart-pro-item .delete-icon {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  padding: 15rpx;
  top: 28rpx;
  right: 22rpx;
}

.cart-pro-item .check-icon {
  width: 36rpx;
  height: 36rpx;
  padding: 30rpx;
}

.check-icon-text {
  width: 52rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
  color: #fff;
  text-align: center;
  background: #999;
  margin: 25rpx;
  border-radius: 4rpx;
}

.cart-product-wrap {
  flex: 1;
  display: inline-flex;
  padding: 38rpx 30rpx 38rpx 0;
  border-bottom: 1rpx solid #ededed;
}

.cart-product-wrap .cart-product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 6rpx;
}

.cart-product-info {
  flex: 1;
  margin-left: 32rpx;
}

.cart-product-info .cart-product-name {
  font-size: 28rpx;
  height: 72rpx;
  line-height: 36rpx;
  color: #333;
  padding-right: 38rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.cart-pro-item.Invalid-product .cart-product-info .cart-product-name {
  color: #999;
}

.cart-product-info .cart-product-sku {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  padding: 4rpx 14rpx;
  color: #999;
  background: #f3f3f3;
  border-radius: 4rpx;
}

.cart-product-info .cart-product-sku-name {
  flex: 1;
}

.cart-product-info .cart-product-sku .allow-icon {
  width: 8rpx;
  height: 8rpx;
  margin-left: 10rpx;
  margin-bottom: 4rpx;
  border-left: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
  transform: rotate(315deg);
}

.cart-product-price {
  display: flex;
  align-items: flex-end;
  margin-top: 12rpx;
}

.cart-product-price price {
  flex: 1;
}

.cart-pro-item.Invalid-product .cart-product-price {
  font-size: 24rpx;
  color: #333;
  margin-top: 22rpx;
}

.cart-product-price stepper .stepper__input {
  height: 20rpx;
}



/*  */
.cart-top {
  overflow: hidden;
  margin: 0;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  background: #fff;
  border-top: 1rpx solid #d5d5d5;
  border-bottom: 1rpx solid #d5d5d5;
}
.cart-top-check {
  display: inline-block;
}
.cart-top-del {
  margin-left: 50rpx;
}
.cart-top-clear {
  float: right;
}