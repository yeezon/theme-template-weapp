/* components/cart-item/cart-item.wxss */

.cart-product {
  padding: 16rpx 30rpx;
  border-top: 1rpx solid #d5d5d5;
  background: #fff;
}

.cart-product-info {
  display: flex;
}

.info-left {
  display: flex;
  padding: 0 30rpx 0 0;
  font-size: 24rpx;
}

.product-tips {
  width: 2em;
  font-size: 24rpx;
  line-height: 1.3em;
  color: #d55;
  margin: auto;
}

.info-cont {
  display: flex;
  flex: 1;
}

.product-img {
  position: relative;
  margin: auto;
  width: 140rpx;
  height: 140rpx;
}

.product-name {
  position: relative;
  display: flex;
  flex: 1;
  margin: 0 10px;
  color: #333;
  font-size: 12px;
  line-height: 1.5em;
  align-self: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}

.info-right {
  display: block;
  text-align: right;
}

.info-right price {
  display: block;
  font-weight: bold;
}

.product-del {
  display: inline-block;
  margin: 40rpx 0 0;
  padding: 0;
  color: #333;
  font-size: 12px;
}

.cart-product-set {
  display: flex;
  padding: 16rpx 0 0 58rpx;
}

.product-skus {
  position: relative;
  flex: 1;
  /* display: inline-flex; */
  white-space: nowrap;
  font-size: 12px;
  margin-right: 20rpx;
  padding: 12rpx 40rpx 12rpx 12rpx;
  text-align: left;
  color: #999;
  border: 1rpx solid #d5d5d5;
  border-radius: 6rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product-skus-empty {
  border: none;
}

.checkbox__inner {
  display: inline-block;
  position: relative;
  border: 2rpx solid #adadad;
  border-radius: 4rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 30rpx;
  height: 30rpx;
  margin: auto;
  background-color: #fff;
  z-index: 1;
  -webkit-transition: border-color 0.25s cubic-bezier(0.71, -.46, 0.29, 1.46),
                        background-color 0.25s cubic-bezier(0.71, -.46, 0.29, 1.46);
  transition: border-color 0.25s cubic-bezier(0.71, -.46, 0.29, 1.46),
                background-color 0.25s cubic-bezier(0.71, -.46, 0.29, 1.46);
}

.checkbox__inner:after {
  -webkit-box-sizing: content-box;
  box-sizing: content-box;
  content: "";
  border: 2rpx solid #fff;
  border-left: 0;
  border-top: 0;
  height: 15rpx;
  left: 8rpx;
  position: absolute;
  top: 2rpx;
  -webkit-transform: rotate(45deg) scaleY(0);
  transform: rotate(45deg) scaleY(0);
  width: 6rpx;
  -webkit-transition: -webkit-transform 0.15s ease-in 0.05s;
  transition: -webkit-transform 0.15s ease-in 0.05s;
  transition: transform 0.15s ease-in 0.05s;
  transition: transform 0.15s ease-in 0.05s, -webkit-transform 0.15s ease-in 0.05s;
  -webkit-transform-origin: center;
  transform-origin: center;
}

.checkbox__inner.is-checked {
  background-color: #4685ee;
  border-color: #4685ee;
}

.checkbox__inner.is-checked:after {
  -webkit-transform: rotate(45deg) scaleY(1);
  transform: rotate(45deg) scaleY(1);
}
