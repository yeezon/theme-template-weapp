.view {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f6f4f9;
}

.main {
  flex: 1;
  overflow-y: auto;
}

.order-list {
  margin: 10px 0;
}

.order-list-item {
  margin-bottom: 10px;
  background: #fff;
}

.order-detail-head {
  display: flex;
  align-items: center;
  padding: 11px 14px;
  border-bottom: 1px solid #f4f4f4;
}

.order-list-item .order-detail-number {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.order-list-item .order-detail-status {
  font-size: 28rpx;
  color: #4685ee;
  margin-left: 30rpx;
  font-weight: bold;
}

.order-list-item .order-detail-status.processing-status {
  color: #4685ee;
}

.order-list-item .order-detail-status.end-status {
  color: #191919;
}

.order-list-item .order-detail-status .negative {
  color: #a6a6a6;
}

.order-list-item .order-details-shipments {
  padding: 0 30rpx;
}

.order-list-item .order-details-shipments-item {
  border-bottom: 2rpx solid #f4f4f4;
}

.order-list-item .order-details-shipments-item:last-child {
  border-bottom: none;
}

.order-list-item .order-details-products {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-list-item .order-details-products-list {
  display: flex;
  align-items: center;
  justify-content: center;
}

.order-list-item .order-details-products-list .order-details-products-list-item {
  width: 160rpx;
  height: 160rpx;
  background-color: #eee;
}

.order-list-item .order-details-products-list .order-details-products-list-item:not(:nth-last-child(1)) {
  margin-right: 10rpx;
}

.order-list-item .order-details-products-list image {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.order-list-item .order-details-products-total {
  font-size: 26rpx;
  color: #999;
}

.order-list-item .order-details {
  margin-left: 30rpx;
  flex: 1;
  display: inline-flex;
  align-items: center;
  overflow: hidden;
}

.order-list-item .order-details .name {
  font-size: 28rpx;
  color: #333;
  line-height: 34rpx;
  font-weight: bold;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.order-list-item .order-details .price {
  font-size: 24rpx;
  color: #262626;
  margin-top: 28rpx;
  text-align: right;
  font-weight: bold;
}

.order-list-item .order-details .price .price {
  margin-left: 6rpx;
  font-weight: bold;
  color: #262626;
}

.order-package-info {
  padding: 20rpx 0;
  border-top: 2rpx solid #f4f4f4;
  text-align: right;
  font-size: 24rpx;
  color: #777;
  line-height: 40rpx;
}

.order-package-info .package-tag {
  vertical-align: baseline;
}

.order-package-info .package-status {
  display: inline-block;
  margin: 0 0 0 10rpx;
  font-size: 26rpx;
  font-weight: 700;
  vertical-align: baseline;
}

.order-package-info_status.processing {
  color: #4685ee;
}

.order-package-info_status.end {
  color: #666;
}

.order-list-item .order-btns {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 24rpx 30rpx 24rpx 30rpx;
  border-top: 1rpx solid #f4f4f4;
}

.order-list-item .order-btns price {
  flex: 1;
  color: #333;
  font-weight: bold;
}

.order-list-item .order-btns .order-btn {
  height: 60rpx;
  padding: 0 18rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  margin-left: 12rpx;
  margin-right: 0;
  color: #4685ee;
  box-sizing: border-box;
  border-radius: 30rpx;
  border: 1rpx solid #4685ee;
  background-color: #fff;
}

.order-list-item .order-btns .order-btn::after {
  border-radius: 0;
  border: none;
}

.order-btn-hover {
  opacity: 0.7;
  background-color: rgba(0, 0, 0, 0.1);
}

.order-list-item .order-btns .order-btn.btn-fill {
  color: #fff;
  background: #fb544e;
  border: 1rpx solid #fb544e;
}

.order-list-item .order-btns .order-btn.time .btn-text {
  padding: 0 6rpx;
}

.order-list-item .order-btns .order-btn.time .line {
  font-size: 20rpx;
  color: #fff;
}

.order-list-item .order-btns .order-btn.btn-share {
  color: #fff;
  background-color: #ff812d;
  border-color: #ff812d;
}

/* no-data */

.no-data-content {
  padding-top: 280rpx;
  width: 100%;
  text-align: center;
}

.no-data-content image {
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.no-data-text {
  font-size: 30rpx;
  color: #666;
}

.no-data_btn {
  width: 523rpx;
  height: 93rpx;
  line-height: 93rpx;
  border-radius: 46rpx;
  background-color: #ff812d;
  font-size: 36rpx;
  color: #fff;
  margin: 120rpx auto 0;
}

/*  */

.loaded-all {
  display: block;
  font-size: 13px;
  padding: 10px 0 20px;
  color: #999;
  text-align: center;
}

.loadmore {
  padding: 10px 0 20px;
}

.loadmore-tips {
  font-size: 13px;
  color: #999;
  text-align: center;
}

/*  */

.order-status-filter {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 36px;
  font-size: 13px;
  color: #444;
  background: #fff;
  z-index: 9;
}

.order-status-filter-item {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  flex: 1;
  height: 36px;
}

.order-status-filter-item .text {
  padding: 0 5px;
  line-height: 34px;
}

.order-status-filter-item .text.active {
  font-weight: bold;
  color: #4685ee;
  border-bottom: 2px solid #4685ee;
}

.socialSync-tips {
  padding: 20rpx 28rpx;
  font-size: 24rpx;
  margin-bottom: 18rpx;
  color: #666;
  background: #fff;
}

.socialSync-tips text {
  color: #4685ee;
}
