.view {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #fff;
}

.nav-bar-left {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 30px;
  height: 30px;
}

.nav-bar-left-icon {
  width: 23px;
  height: 23px;
}

.main {
  flex: 1;
  overflow-y: auto;
}

.adress-form-wrap {
  /* padding-bottom: 236rpx; */
}

.adress-form-list {
  margin-top: 38rpx;
  padding: 0 28rpx;
  background: #fff;
}

.adress-input-wrap {
  margin: 0 18rpx 46rpx;
  padding-top: 20rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #ebebeb;
}

.adress-form-input {
  position: relative;
  font-size: 28rpx;
  font-weight: bold;
  color: #262626;
}

.adress-form-textarea {
  width: 100%;
  font-size: 28rpx;
  min-height: 1.4rem;
  max-height: 200rpx;
}

.area-picker {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.input-placeholder {
  color: #a6a6a6;
  font-weight: normal;
}

.textarea-placeholder {
  color: #a6a6a6;
  font-weight: normal;
}

.area-picker-text {
  font-size: 28rpx;
  color: #a6a6a6;
  overflow: hidden;
  font-weight: normal;
  text-overflow: ellipsis;
}

.area-picker-text.selected {
  color: #262626;
  font-weight: bold;
}

.area-picker-image {
  position: absolute;
  top: -6rpx;
  right: 0;
  width: 22rpx;
  height: 38rpx;
}

.adress-bottom {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px 20px calc(20px + var(--homeIndicator));
  background: #fff;
  z-index: 9;
}

.adress-form-confirm {
  display: flex;
  width: 100%;
  height: 44px;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  color: #fff;
  background: #fb544e;
  border-radius: 4px;
}

.adress-form-defult {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 0 20px;
  font-size: 14px;
  color: #262626;
}

.adress-form-defult-text {
  margin-left: 10px;
}

.adress-form-defult .check-icon {
  width: 18px;
  height: 18px;
  border: 1px solid #dedede;
  box-sizing: border-box;
  border-radius: 100%;
}

.adress-form-defult-img {
  width: 18px;
  height: 18px;
}

.adress-form-tips {
  padding: 0 30px 30px;
}
.adress-form-tips text {
  font-size: 14px;
  line-height: 1.7em;
  color: #f44;
}
