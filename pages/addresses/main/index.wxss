
.view {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #fff;
}

.main {
  overflow-y: auto;
  height: 100%;
}

.address-list {
  padding: 0 14px;
}

.address-item {
  display: flex;
  padding: 14px 0 12px;
  margin: 0 10px 14px;
  align-items: center;
  background: #fff;
  border-bottom: var(--1px) solid #ebebeb;
}

.address-item .check-wrap {
  display: flex;
  width: 37rpx;
  margin-right: 26rpx;
}

.address-item .check-wrap .check-icon {
  width: 37rpx;
  height: 37rpx;
  border: 3rpx solid #dedede;
  box-sizing: border-box;
  border-radius: 100%;
}

.address-item .check-wrap-img {
  width: 37rpx;
  height: 37rpx;
}

.address-item .address-info {
  flex: 1;
  word-break: break-all;
}

.address-item .address-info .info {
  display: flex;
  font-size: 28rpx;
  color: #262626;
  font-weight: bold;
  align-items: center;
}

.address-item .address-info .info .name {
  max-width: 226rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address-item .address-info .info .mobile {
  margin-left: 30rpx;
}

.address-item .address-info .info .tag {
  display: inline-flex;
  width: 60rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 10rpx;
  border-radius: 15rpx;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: normal;
  color: #fff;
  background: #fb544e;
}

.address-item .address-info .address {
  font-size: 24rpx;
  color: #a6a6a6;
  margin-top: 6rpx;
  line-height: 1.5;
}

.address-item .edit-wrap {
  box-sizing: content-box;
  display: flex;
  width: 36rpx;
  margin-left: 10rpx;
  height: 100%;
  padding: 20rpx 30rpx;
  /* margin-right: -30rpx; */
}

.address-item .edit-wrap-img {
  width: 36rpx;
  height: 36rpx;
}

/*  */

.adress-bottom {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px 0 calc(20px + var(--homeIndicator));
  font-size: 14px;
  background: #fff;
  color: #fff;
}
.adress-bottom.no-address {
  /* top: 600rpx; */
}

.adress-bottom .get-wechat-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 316rpx;
  height: 88rpx;
  margin: 0 11rpx 0 48rpx;
  background: #3cb035;
  border-radius: 8rpx;
}

.adress-bottom .get-wechat-btn-img {
  width: 41rpx;
  height: 41rpx;
  margin-right: 14rpx;
}

.adress-bottom .self-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 316rpx;
  height: 88rpx;
  margin: 0 30rpx 0 48rpx;
  /* margin: 0 48rpx 0 11rpx; */
  background: #fb544e;
  border-radius: 8rpx;
}

.adress-bottom .self-btn-img {
  width: 38rpx;
  height: 38rpx;
  margin-right: 10rpx;
}

