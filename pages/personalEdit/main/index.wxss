
.view {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f6f4f9;
  font-size: 14px;
}

.main {
  flex: 1;
  overflow-y: auto;
  padding: 15px 0;
}

.input-container {
  padding: 0 15px;
  display: flex;
  height: 44px;
  line-height: 44px;
  background: #fff;
}

.input {
  flex: 1;
  height: 44px;
  line-height: 44px;
  flex-grow: 1;
}

.text {
  width: 100px;
}

.sub-btn {
  width: 90%;
  height: 40px;
  line-height: 40px;
  margin: 30px auto;
  text-align: center;
  color: #fff;
  border-radius: 4px;
  background: #fb544e;
}
