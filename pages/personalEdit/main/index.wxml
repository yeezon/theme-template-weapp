<view class="view">
  <nav-bar navigateBack="true">
    <view slot="center">{{title}}</view>
  </nav-bar>

  <scroll-view class="main" scroll-y="{{ true }}">
    <view class="input-container">
      <view class="text">{{inputInfo.label}}</view>
      <view class="input-wrap">
        <input class="input" placeholder='{{inputInfo.desc}}' bindinput="bindKeyInput" value="{{inputValue}}"></input>
      </view>
    </view>
    <view class="sub-btn" bindtap="fnSubmit">чбошод</view>
  </scroll-view>
</view>
