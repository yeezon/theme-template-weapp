/* pages/products/components/Limit/limit.wxss */

.s-bar {
  margin: 0 -30rpx 40rpx;
}
.info {
  margin: 30rpx 0;
  font-size: 0;
  line-height: 1;
}
.name {
  margin: 0;
  color: #262626;
  line-height: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.desc {
  margin: 18rpx 0;
  color: #595959;
  font-size: 30rpx;
  line-height: 40rpx;
  max-height: 80rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.s-cont {
  position: relative;
  background: #f7f6f4;
  padding: 30rpx 40rpx;
  border-radius: 8rpx;
}
.s-dt {
  display: inline-block;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #444;
}
.s-dd {
  display: inline-block;
  line-height: 40rpx;
  font-size: 24rpx;
}
.s-price {
  margin-bottom: 40rpx;
}
.s-price .s-dt {
  margin-right: 40rpx;
}
.s-event_price {
  font-size: 48rpx;
  color: #f00;
  vertical-align: baseline;
  margin-right: 30rpx;
  display: inline-block;
}
.s-original_price {
  font-size: 24rpx;
  color: #999;
  margin: 0 10rpx 0 30rpx;
}
.s-small_x {
  padding-right: 10rpx;
}
.s-small_y {
  font-size: 32rpx;
}
.s-currency {
  text-decoration: line-through;
}
.s-limit,
.s-award {
  margin: 20rpx 0 0;
}
.s-limit .s-dt,
.s-award .s-dt {
  margin-right: 40rpx;
  vertical-align: top;
}
.s-limit .s-dd,
.s-award .s-dd {
  color: #777;
  font-style: normal;
  vertical-align: top;
}