/* components/product-horizon-item/product-horizon-item.wxss */

product-horizon-item {
  display: inline-block;
  margin-right: 18rpx;
}

product-horizon-item:last-child {
  margin-right: 30rpx;
}

.product-horizon-item {
  display: inline-block;
  width: 250rpx;
  vertical-align: top;
  text-align: center;
}

.product-horizon-item_img {
  position: relative;
  width: 250rpx;
  height: 250rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e1e3e7;
  box-shadow: 0px 0px 6rpx 0px rgba(96, 109, 143, 0.1);
  box-sizing: border-box;
}

.product-horizon-item_img .soldout-tag {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 100%;
  font-size: 26rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
}

.product-horizon-item_img .activity-tag {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 78rpx;
  height: 78rpx;
  /* border-radius: 100%; */
}

.product-horizon-item_brand {
  font-size: 22rpx;
  margin-top: 2rpx;
  color: #808080;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.product-horizon-item_name {
  font-size: 24rpx;
  margin-top: 2rpx;
  color: #262626;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.product-horizon-item_price {
  display: flex;
  font-size: 20rpx;
  margin-top: 14rpx;
  align-items: center;
  justify-content: center;
}

.product-horizon-item_price price {
  margin-right: 6rpx;
}

.price_line {
  color: #fe384f;
  font-size: 14px;
  margin-right: 10rpx;
}
