/* components/row-list/row-list.wxss */

row-list:last-child .list__body {
  border-bottom: none;
}

.list-wrap {
  text-align: left;
  border: none;
  padding: 0;
  margin: 0;
  border-radius: 0;
  border-color: #fff;
  background: #fff;
}

.list-wrap::after {
  border: none;
}

.list-wrap-active {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.list__body {
  display: flex;
  align-items: center;
  min-height: 114rpx;
  line-height: 1.4;
  padding: 20rpx 0 20rpx 0;
  margin-left: 48rpx;
  margin-right: 48rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f4f4f4;
  font-size: 28rpx;
  color: #262626;
}

.list__none {
  border: none;
}

.list__image {
  width: 38rpx;
  height: 38rpx;
  margin-right: 30rpx;
}

.list__icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.list__title {
  flex: 1;
  line-height: 32rpx;
}

.list__title--sub {
  margin-top: 14rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999;
}

.list__desc--dot {
  width: 16rpx;
  height: 16rpx;
  margin-right: 18rpx;
  border-radius: 16rpx;
}

.list__desc--text {
  /* color: #ff812d; */
  color:#999;
  font-size: 28rpx;
}

.list__desc--arrow {
  width: 22rpx;
  height: 22rpx;
  margin-left: 8rpx;
}
