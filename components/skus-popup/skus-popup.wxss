/* components/skus-popup/skus-popup.wxss */

/*  SKU popup  */

.sku-popup {
  /* max-height: 788rpx; *//* max-height: 500rpx; */
  background-color: #fff;
  -webkit-overflow-scrolling: touch;
  z-index: 998;
}

.sku-popup-content {
  position: relative;
  padding: 14px 16px calc(var(--tabBar) + var(--homeIndicator));
}

.sku-popup-content .sku-popup-close {
  position: absolute;
  top: 0;
  right: 0;
  width: 22rpx;
  height: 22rpx;
  padding: 28rpx;
}

.sku-popup-content .pro-info {
  display: flex;
  /* height: 160rpx; */
}

.sku-popup-content .pro-info image {
  position: absolute;
  top: -36rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 4rpx;
  background: #f8f8f8;
  border: 1rpx solid #ededed;
}

.sku-popup-content .pro-info .select-info {
  min-height: 150rpx;
  margin-left: 218rpx;
  font-size: 28rpx;
  color: #444;
  margin-right: 50rpx;
  font-weight: bold;
}

.sku-popup-content .pro-info .select-info .selected-sku .text {
  margin-right: 16rpx;
}

.sku-popup-content .pro-info .select-info .price {
  font-weight: bold;
  margin-bottom: 8rpx;
}

.sku-popup-content .pro-info .select-info .price {
  color: #4c4c4c;
  font-size: 34rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.sku-popup-content .pro-info .select-info .price .steps {
  color: #00b268;
}

.sku-popup-content .pro-info .select-info .price .steps-num {
  font-family: Century Gothic;
}

/*pro-sku-select  */

.pro-sku-select {
  display: flex;
  height: 90rpx;
  padding: 0 36rpx;
  align-items: center;
  border-radius: 8rpx;
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #262626;
  border: 1rpx solid #d9d9d9;
  background: #fafafa;
  box-sizing: border-box;
}

.pro-sku-select .text {
  flex: 1;
}

.pro-sku-select image {
  width: 20rpx;
  height: 22rpx;
}

button {
  margin: 0;
  border-radius: 0;
  border: none;
  background: transparent;
}

button::after {
  border-radius: 0;
  border: none;
}

