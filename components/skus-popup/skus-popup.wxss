/* Skus */

.sku-info {
  margin: 0 0 40rpx;
  max-height: 600rpx;
  overflow: auto;
}

/* End Skus */

.sku-confirm-btn {
  position: fixed;
  left: 0;
  bottom: var(--homeIndicator);
  width: 100%;
  height: var(--tabBar);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  z-index: 999;
}

.sku-confirm-btn_hover {
  opacity: 0.9;
}

.sku-confirm-btn.sold_out {
  color: #4c4c4c;
  background: #d9d9d9;
}

.sku-confirm-btn.selectBtn {
  background: #fdac39;
}
.sku-confirm-btn.addBtn {
  background: #fdac39;
}
.sku-confirm-btn.buyBtn {
  background: #fb544e;
}

.sku-count {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 40rpx;
}

.sku-count text {
  flex: 1;
}

.sku-count stepper {
  display: inline-block;
}

.price-line {
  margin: 0 8rpx;
  color: #fe384f;
}
