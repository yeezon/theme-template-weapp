<!--components/product-item/product-item.wxml-->
<view class='product-item' data-handle="{{product.handle}}" bindtap='onTap'>
  <image class='product-item_img' src='https:{{product.feature_image.src}}' mode='aspectFill'>
    <!-- <view wx:if="{{!product.sku_stock}}" class="soldout-tag">售罄</view> -->
  </image>
  <view class='product-item_brand'>{{product.vendor.name}}</view>
  <view class='product-item_name'>{{product.name}}</view>
  <view class='product-item_price'>
    <text wx:if="{{priceTag}}" class="product-item_tag">{{priceTag}}</text>
    <price value="{{product.price_min}}" font-size="28"></price>
    <text wx:if="{{product.price_min < product.price_max}}" class="price_line">~</text>
    <price wx:if="{{product.price_min < product.price_max}}" value="{{product.price_max}}" font-size="28"></price>
  </view>
  <!-- <view class="price_del">
    <price wx:if="{{product.compare_price_min < product.compare_price_max}}" value="{{product.compare_price_max}}" type="del" font-size="22"></price>
  </view> -->
</view>