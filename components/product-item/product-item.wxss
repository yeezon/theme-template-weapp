.product-item_price {
  margin-top: 10rpx;
  padding: 0 14rpx;
  line-height: 32rpx;
}

.product-item_price price {
  margin-right: 10rpx;
}

.price_line {
  color: #fe384f;
  font-size: 14px;
  margin-right: 10rpx;
}

.price_del {
  padding-left: 10px;
}
