/* components/product-vertical-item/product-vertical-item.wxss */

product-vertical-item {
  display: block;
  margin-bottom: 22rpx;
}

product-vertical-item:last-child {
  margin-bottom: 0;
}

.product-vertical-item {
  display: flex;
  align-items: center;
}

.product-vertical-item image {
  position: relative;
  width: 284rpx;
  height: 284rpx;
  margin-left: 30rpx;
  border-radius: 8rpx;
  border: 1rpx solid #e1e3e7;
  box-shadow: 0px 0px 6rpx 0px rgba(96, 109, 143, 0.1);
}

.product-vertical-item image .soldout-tag {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  width: 78rpx;
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
  border-radius: 100%;
  font-size: 26rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
}

.product-vertical-item_info {
  flex: 1;
  padding: 0 30rpx 0 28rpx;
  overflow: hidden;
}

.product-vertical-item_info .brand {
  font-size: 26rpx;
  color: #808080;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.product-vertical-item_info .name {
  font-size: 30rpx;
  line-height: 50rpx;
  color: #262626;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.product-vertical-item_info .price {
  line-height: 38rpx;
}

.product-vertical-item_info .price .price_line{
  font-size: 28rpx;
  margin-right: 8rpx;
  color: #E94A46;
}

.product-vertical-item_info .price price {
  margin-right: 8rpx;
}
