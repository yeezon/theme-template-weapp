/* components/login-modal/login-modal.wxss */

.login-modal {
  width: 538rpx;
  position: fixed;
  top: 20%;
  left: 50%;
  text-align: center;
  border-radius: 8rpx;
  background: #fff;
  overflow: hidden;
  transform: translate(-50%);
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  z-index: 998;
}

.header {
  width: 100%;
  min-height: 200rpx;
  padding-top: 80rpx;
}

.login-modal .logo {
  width: 70rpx;
  height: 64rpx;
  margin: 80rpx auto 24rpx;
}

.login-modal .bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
}

.login-modal .close-image {
  position: absolute;
  top: 0;
  right: 0;
  width: 28rpx;
  height: 28rpx;
  padding: 38rpx;
}

.login-modal .title {
  padding: 0 20rpx;
  font-size: 66rpx;
  color: #262626;
  font-weight: bold;
  line-height: 1.5;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.login-modal .content {
  font-size: 26rpx;
  color: #a6a6a6;
  margin-top: 18rpx;
}

button {
  border-radius: 0;
  border: none;
  margin: 0;
  background: transparent;
}

button::after {
  border-radius: 0;
  border: none;
}

.login-modal .button {
  width: 418rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0 auto 66rpx;
  border-radius: 50rpx;
  color: #fff;
  background: #fb544e;
}

.login-modal .button image {
  width: 47rpx;
  height: 47rpx;
  margin-right: 14rpx;
}
