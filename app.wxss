/*  加载更多   */

.loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.loadmore {
  width: 65%;
  margin: 0.5em auto;
  line-height: 1.6em;
  font-size: 26rpx;
  text-align: center;
}

.loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color: #3c3c3c;
}

.loadmore_line {
  border-top: 1rpx solid #e5e5e5;
  margin-top: 2em;
}

.loadmore_line .loadmore__tips {
  position: relative;
  top: -0.9em;
  padding: 0 0.55em;
  background-color: #f5f5f5;
  color: #999;
}


/* confirm-model */
.confirm-model {
  position: fixed;
  top: 35%;
  left: 50%;
  width: 80%;
  border-radius: 8rpx;
  background: #fff;
  overflow: hidden;
  transform: translate(-50%);
  z-index: 998;
}

.confirm-model .title {
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #262626;
  border-bottom: 1rpx solid #eee;
}

.confirm-model .content {
  display: flex;
  align-items: center;
  padding: 50rpx;
  font-size: 28rpx;
  color: #666;
}

.confirm-model .content .text {
  flex: 1;
}

.confirm-model .content::before {
  content: '';
  display: inline-flex;
  width: 15rpx;
  height: 15rpx;
  margin-right: 10rpx;
  border-radius: 100%;
  background: #999;
}

.confirm-model .bottom {
  display: flex;
  border-top: 1rpx solid #eee;
  box-sizing: border-box;
}

.confirm-model .bottom button {
  flex: 1;
  height: 88rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-size: 30rpx;
  border-radius: 0;
  color: #333;
  border-right: 1rpx solid #eee;
  background: #fff;
}

.confirm-model .bottom button.confirm-btn {
  color: #fe384f;
}

.confirm-model .bottom button:last-child {
  border-right: none;
}

.confirm-model .bottom button::after {
  border: none;
}
