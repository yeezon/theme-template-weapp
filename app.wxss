/**app.wxss**/

scroll-view::-webkit-scrollbar {
  display: none;
}

/* 0 的时候用 0px，不然 calc 计算时不会自动转换类型，导致计算出错 */
page {
  --statusBar: 0px;
  --homeIndicator: 0px;
  --navBar: 44px;
  --tabBar: 49px;

  --borderColor: #d5d5d5;
  --backgroundColor: #f6f4f9;
  --1px: 1rpx;
  --100vh: 100vh;

  font-family: 'PingFang SC', -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

@supports (bottom: constant(safe-area-inset-bottom)) {
  page {
    --statusBar: constant(safe-area-inset-top);
    --homeIndicator: constant(safe-area-inset-bottom);
  }
}

@supports (bottom: env(safe-area-inset-bottom)) {
  page {
    --statusBar: env(safe-area-inset-top);
    --homeIndicator: env(safe-area-inset-bottom);
  }
}

.container {
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/*  */

button {
  border-radius: 0;
  border: none;
  margin: 0;
}

button::after {
  border-radius: 0;
  border: none;
}

/*  */

.new-nav-bar-left {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 28rpx;
}

.new-nav-bar_service {
  position: relative;
  display: inline-flex;
  align-items: center;
  padding: 10rpx;
  border: none;
  border-radius: 0;
  background: #fff;
}

.new-nav-bar_service::after {
  border: none;
  border-radius: 0;
}

.new-tabbar-icon {
  width: 46rpx;
  height: 48rpx;
}

/*  */

.fix-iphonex-button {
  bottom: 68rpx !important;
}

.fix-iphonex-button::after {
  content: ' ';
  position: fixed;
  bottom: 0 !important;
  height: 68rpx !important;
  width: 100%;
  background: #fff;
}

